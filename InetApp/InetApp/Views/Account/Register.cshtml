@model InetApp.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div id="reg-form">
    <form action="~/Account/Register" method="post">
        <p>
            <input type="text" id="username" name="UserName" placeholder="username">
            <span>username must be greater than 4 character</span>
        </p>
        <p>
            <input type="password" id="password" name="Password" placeholder="password">
            <span>password must be greater than 8 character</span>
        </p>
        <p>
            <input type="password" id="con_password" name="ConfirmPassword" placeholder="confirm password">
            <span>confirm password</span>
        </p>
        <input type="submit" id="submit">
    </form>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
</div>


